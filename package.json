{
  "name": "claude-log-navigator",
  "displayName": "Claude Log Navigator",
  "description": "Navigate and view Claude Code logs in VSCode",
  "version": "0.2.0",
  "publisher": "aki77",
  "license": "MIT",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aki77/vscode-claude-log-navigator.git"
  },
  "bugs": {
    "url": "https://github.com/aki77/vscode-claude-log-navigator/issues"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "claudeLogPanel",
          "title": "Claude Logs",
          "icon": "$(history)"
        }
      ]
    },
    "views": {
      "claudeLogPanel": [
        {
          "id": "claudeLogNavigator",
          "name": "Claude Code Logs"
        }
      ]
    },
    "commands": [
      {
        "command": "claudeLogNavigator.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "claudeLogNavigator.filterByDate",
        "title": "Filter by Date",
        "icon": "$(filter)"
      },
      {
        "command": "claudeLogNavigator.openLogDetail",
        "title": "Open Log Detail"
      },
      {
        "command": "claudeLogNavigator.clearFilter",
        "title": "Clear Filter",
        "icon": "$(clear-all)"
      },
      {
        "command": "claudeLogNavigator.searchLogs",
        "title": "Search Logs",
        "icon": "$(search)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "claudeLogNavigator.refresh",
          "when": "view == claudeLogNavigator",
          "group": "navigation"
        },
        {
          "command": "claudeLogNavigator.filterByDate",
          "when": "view == claudeLogNavigator",
          "group": "navigation"
        },
        {
          "command": "claudeLogNavigator.clearFilter",
          "when": "view == claudeLogNavigator",
          "group": "navigation"
        },
        {
          "command": "claudeLogNavigator.searchLogs",
          "when": "view == claudeLogNavigator",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "claudeLogNavigator.openLogDetail",
          "when": "view == claudeLogNavigator && viewItem == logMessage",
          "group": "navigation"
        }
      ]
    }
  },
  "configuration": {
    "title": "Claude Log Navigator",
    "properties": {
      "claudeLogNavigator.maxFiles": {
        "type": "number",
        "default": 500,
        "minimum": 10,
        "maximum": 10000,
        "description": "Maximum number of recent log files to load"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "publish": "pnpm vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  },
  "packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3a253bde65a505ec7c5f9403ece5cc3cd37dcf2531"
}
